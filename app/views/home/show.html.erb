<div id="dd">
<div class="content">
	<div class="poster">
		<%= image_tag "https://image.tmdb.org/t/p/w185/#{@movie.poster_path}" %>
	</div>
	<div class="main">
		<h1><%= @movie.title %></h1>
		<p><%= @movie.overview %></p>

<div id="watch-unwatch" >
 <% if Date.parse(@movie.release_date) < Date.today %>

  <% if @items==[] %>
           
    <%= form_for(current_user.movie_relations.build,:remote => true )do |f|%>
 
  <div><%= hidden_field_tag :movie_id, @movie.id %></div>
    <div><%= hidden_field_tag :movie_title, @movie.title %></div>

  <%= f.submit "Watched", class: "btn btn-primary"%>
  <% end %>
  <% else %>
   
   
   <%= button_to "Unwatch",movie_relation_url(@movie.id),method: :delete, class: "btn btn-danger",remote: true %> 
  
  <%end %>
  <% else %>
    <h6>Not yet released!</h6>
  <% end %>
  </div>
  </div>
	
	<div class="details">
		<h6>Budget:$<%= @movie.budget %></h6>
		<h6>Release Date:<%= @movie.release_date %></h6>
		<h6>Runtime:<%= @movie.runtime %></h6>
	</div>
</div>
</div>