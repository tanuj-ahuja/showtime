<div class="content">
<% if current_user.requested_friendships ==[] %>
    <h2>No Requests</h2>
<%else%>

    <% current_user.requested_friendships.each do |request| %>
 
    
      <div id="confirm_<%=request.id%>">
      

      <%= request.email %>
      
       <div style="float:right;">
      <%= button_to "Accept",  friendship_path(id: request.id), method: "put" ,class: "btn btn-primary ",remote: true%>
      </div>
      <div style="float:right;">
      <%= button_to "Decline", friendship_path(id: request.id), method: :delete , class: "btn btn-danger",remote: true%>
      </div>
       <div style="clear:both;">
    </div>
  </div>
    
    
    
<br>
  <% end %>

  <%end%>
  </div>